{% extends '@App/Template/base.html.twig' %}

{%  block body %}
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
<!-- Main -->
<div id="main">
    {% if failed is defined %} {{failed}} {% endif %}
    <!-- Get Started -->
    <section id="cta" class="main special">
        <a id="snapgifMobile" href="http://chaturbate.com/in/?track=default&tour=ZmU7&campaign=cniCC">
            <img  alt="snapchat gif" src="{{ asset('assets/images/snapGif.gif') }}" />
        </a>
        <form action="{{ path('register') }}" id='registerForm' method="post">
            <header class="major">
                <h2>Rejoins la liste des snappers, met ton pseudo</h2>

                <input name='pseudo' id='pseudo' placeholder="Ton pseudo snap" />


                <h2 id='titleType'>Quel type de snapper es-tu ?</h2>

                <select name='type' id='type'>
                    <option value='0'> Normal </option>
                    <option  value='1'> HOT </option>
                    <option selected='true' value='2'> HOT 2.0 </option>
                </select>

                <div id='genderContainer'>
                    <h2 id='genderType'>Genre</h2>
                    <select name='gender' id='genderSelect'>
                        <option selected='true' value='homme'>Homme</option>
                        <option  value='false'>Femme</option>
                    </select>
                </div>

                <div id='ageContainer'>
                    <h2 id='age'>Age</h2>
                    <input type='text' id='ageText' name='age' />
                </div>

                <div id='bioContainer'>
                    <h2 id='bio'>Description</h2>
                    <textarea id='bioText' placeholder='Décris toi / Ce que tu recherche' name='bioText'></textarea>
                </div>

                <h2 id='locationType'>Ta région ?</h2>
                <select name='locations' id='locationSelect'>
                    {% for location in locations %}
                    <option selected='true' value={{location.id}}>{{location.nom}}</option>

                    {% endfor %}
                </select>

            </header>
            <footer class="major">
                <ul class="actions">
                    <li>
                        <input id='registerButton' class="button special" type="submit" value="Valider" />
                    </li>

                </ul>
            </footer>
        </form>
    </section>

</div>
