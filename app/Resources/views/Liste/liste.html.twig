{% extends 'base.html.twig' %}
{% block body %}
    <div id="main">

        <!-- Get Started -->
        <section id="cta" style="padding-top: 20px !important; padding-bottom: 20px;" class="main special">
            <header class="major">
                <form method="POST" action="{{ path('liste', { 'type': 'hot' }) }}">
                <h2>Pseudo par r√©gion</h2>
                <select name='location' id='locationSelect'>
                    {% for location in locations %}

                        <option {% if locationSelected == location.id %} selected="selected" {% endif %} value={{location.id}}>{{location.nom}}</option>
                    {% endfor %}

                </select>
            </header>
            <footer class="major">
                <ul class="actions">
                    <li>
                        <input type="submit" value="Rechercher" />
                    </li>

                </ul>
            </form>
            </footer>
        </section>
        {% if hot is defined and hot == 'false'%}
            <section id="cta"  style="padding-top: 20px !important;" class="main special">
                <header class="major">

                    <h2>Tous les pseudos</h2>

                </header>
                <footer class="major">
                    <ul class="actions">

                        {% for user in users %}
                            {%if user.hot == 0%}
                                <li class="inliner" >
                                    <div class="card">
                                        <img id="logoListe" src={{ asset('assets/images/logosnap.png')}}  alt="Avatar" style="width:100%">

                                        <div class="container">
                                            <h4><b>{{user.login}}</b></h4>

                                        </div>
                                    </div>
                                </li>
                            {%endif%}
                        {% endfor %}
                    </ul>

                </footer>
            </section>

        {%else%}
            <section id="cta"  style="padding-top: 20px !important;" class="main special">
                <header class="major">
                    <h2> Tous les pseudos hot </h2>
                </header>
                <footer class="major">
                    <ul class="actions">

                        {% for user in users %}
                            {%if user.hot == 1%}
                                <li class="inliner" >
                                    <div class="card">
                                        <img id="logoListe" src={{ asset('assets/images/logosnap.png')}}  alt="Avatar" style="width:100%">

                                        <div class="container">
                                            <h4><b>{{user.login}}</b></h4>

                                        </div>
                                    </div>
                                </li>
                            {%endif%}
                        {% endfor %}
                    </ul>

                </footer>
            </section>
        {%endif%}

    </div>

{% endblock body %}